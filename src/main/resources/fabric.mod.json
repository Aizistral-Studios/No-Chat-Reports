{
  "schemaVersion": 1,
  "id": "nochatreports",
  "version": "${version}",

  "name": "No Chat Reports",
  "description": "Elimina las firmas criptográficas de los mensajes de los jugadores, haciendolos imposibles de rastrear y asociarlos con tu cuenta Mojang/Microsoft, así como usar el nuevo sistema de reporte de jugadores.",
  "authors": [
    "Aizistral"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/no-chat-reports",
    "sources": "https://github.com/Aizistral-Studios/No-Chat-Reports",
    "issues": "https://github.com/Aizistral-Studios/No-Chat-Reports/issues"
  },

  "license": "WTFPL",
  "icon": "NCR_logo.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.aizistral.nochatreports.NoChatReports"
    ],
	"client": [
      "com.aizistral.nochatreports.NoChatReportsClient"
    ]
  },
  "mixins": [
    "nochatreports.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric-networking-api-v1": "*",
    "fabric-screen-api-v1": "*",
    "fabric-rendering-v1": "*",
    "fabric-resource-loader-v0": "*",
    "minecraft": "=1.19.2",
    "java": ">=17"
  },
  "suggests": {},
  "accessWidener" : "nochatreports.accesswidener"
}
